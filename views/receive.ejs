                    <div class="col-12 mb-3 form-border">
                        <label for="email" class="form-label">Enter your email</label>
                        <input type="email" name="username" class="form-control form-control-lg" id="email" required>
                    </div>

                    <div class="col-12 mb-3 form-border">
                        <label for="fname" class="form-label">Enter your first name</label>
                        <input type="text" name="fname" class="form-control form-control-lg" id="fname" required>
                    </div>

                    <div class="col-12 mb-3 form-border">
                        <label for="lname" class="form-label">Enter your last name</label>
                        <input type="text" name="lname" class="form-control form-control-lg" id="lname" required>
                    </div>

                    <div class="col-12 mb-3 form-border">
                        <label for="phone" class="form-label">Enter your phone number</label>
                        <input type="number" name="phone" class="form-control form-control-lg" id="phone" required>
                    </div>

                    <div class="col-12 mb-3 form-border textInput">
                        <label for="password" class="form-label">Choose a password</label>
                        <input type="password" name="password" class="form-control form-control-lg" id="password" required>
                    </div>

                    <button type="submit" class="btn btn-success btn-md">Next</button>

