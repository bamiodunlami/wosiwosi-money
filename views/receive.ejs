                        <select name="description" class="form-select form-select-lg form-control" id="selection" required>
                            <option value="">Choose a description</option>
                            <option value="school">School fee</option>
                            <option value="purchase">Purchase</option>
                            <!-- <option value="bank">Bank transaction</option> -->
                        </select>
                    </div>
                    <div id="optionbase"></div>
