                            <p class="alert alert-danger"><%= messages.error %></p>  
                            <%}%> 
                    <form action="/verifyMail" method="post"> 
                    <div class="col-12 mb-3 form-border">
                        <label for="email" class="form-label">Enter your email</label>
                        <input type="email" name="username" class="form-control form-control-lg" id="email" required>
                    </div>

                    <div class="col-12 mb-3 form-border textInput">
                        <label for="password" class="form-label">Enter password</label>
                        <input type="password" name="password" class="form-control form-control-lg" id="password" required>
                    </div>

                    <div id="confirmEmailId">
