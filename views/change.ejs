<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Choose Password</title>
    <link rel="icon" type="image/png" href="images/icon.png">
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <!-- default style  -->
    <link href="style/login.css" rel="stylesheet" />
    <!-- Jquaery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  </head>
  <body>
    
    <div class="login-bar default-padding">
      <div class="container">
        <div class="row">
          <div class="brand-logo text-center">
            <a href="/"><img class="logo" src="images/wmi.png"></a>
          </div>

          <!-- forget password -->
          <div class="col-12 reset-bar" id="reset-bar">
            <h6 class="text-center">Choose new passwords</h6>
            <!-- <p><=token%> here</p> -->

            <div class="login-bar-cont">
              <form action="/newpass" method="post">
              <div class="mb-3">                
                <label for="exampleFormControlInput1" class="form-label" >Choose a new password</label >
                <input type="text" class="form-control" id="pasReset" name="pass" required min="8" >
              </div>

              <input type="hidden" name="ref" value="<%=token%>">
              <!-- <div class="mb-3">                
                <label for="exampleFormControlInput1" class="form-label">Email address</label >
                <input type="password" placeholder="youmail@mail.com" class="form-control" id="emailField" name="email" required >
              </div> -->
                <p id="passwordMessage"></p>
                <button type="submit" class="btn btn-md btn-success reset" id="changeBtn"> Change password </button>
              </form>
            </div>

            <div class="col text-center" style="margin-top: 10px">
              <p>  already have an account? <a href="/login">login</p>
            </div>
          </div>
          <!-- end -->
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="js/login.js"></script>
  </body>
</html>
