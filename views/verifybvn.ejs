  <body>
    <div class="login-bar default-padding">
      <div class="container">
        <div class="row">
          <div class="brand-logo text-center">
            <a href="/"><img class="logo" src="images/wmi.png"></a>
          </div>

          <!-- login -->
          <div class="col-12" id="login-bar-main">
            <h6 class="text-center">BVN Verification</h6>
            <div class="login-bar-cont">
                <p class="alert alert-success text-center">We need to verify your BVN, click verify to get started</p>
